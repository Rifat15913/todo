<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorWhite</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/colorTextRegular</item>
        <item name="android:textColorHint">@color/colorTextLight</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/regular</item>
    </style>

</resources>